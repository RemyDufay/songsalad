<div class= "sign container">
  <h2>Se connecter</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs animate__animated animate__bounceInDown">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <%= f.button :submit, "Se connecter", class:"form-actions btn btn-primary animate__animated animate__bounceInUp" %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
